{
  "name": "act-rules-implementation-mapper",
  "version": "1.0.0",
  "description": "Mapper for condensing ACT Rules Implementations to be a consumable data for ACT Rules Website",
  "main": "index.js",
  "scripts": {
    "install": "npm install",
    "build": "node ./src/index.js",
    "test": "jest --coverage",
    "format": "prettier --write *.{json,md,js} 'src/**/*.{json,md,js}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/act-rules/act-rules-implementation-mapper.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/act-rules/act-rules-implementation-mapper/issues"
  },
  "homepage": "https://github.com/act-rules/act-rules-implementation-mapper#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "commander": "^3.0.2",
    "flat": "^4.1.0",
    "fs-writefile-promise": "^3.0.2",
    "globby": "^10.0.1",
    "is-url": "^1.2.4",
    "jsonld": "^1.8.0"
  },
  "devDependencies": {
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.0",
    "prettier": "^1.18.2"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "lint-staged": {
    "*.{md,json,js,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
