{
	"name": "act-rules-implementation-mapper",
	"version": "1.0.0",
	"description": "Mapper for condensing ACT Rules Implementations to be a consumable data for ACT Rules Website",
	"main": "./src/index.js",
	"bin": {
		"act-map-generator": "./build/bin/act-mapgen.js"
	},
	"scripts": {
		"test": "jest --coverage && yarn run lint",
		"test:watch": "jest --watch",
		"start": "yarn run build:live",
		"build": "tsc",
		"build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/mapper.ts",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "yarn run lint --fix",
		"prettier": "yarn run prettier:write",
		"prettier:base": "prettier --parser typescript --single-quote",
		"prettier:check": "yarn run prettier:base --list-different \"src/**/*.ts\"",
		"prettier:write": "yarn run prettier:base --write \"src/**/*.ts\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/act-rules/act-rules-implementation-mapper.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/act-rules/act-rules-implementation-mapper/issues"
	},
	"homepage": "https://github.com/act-rules/act-rules-implementation-mapper#readme",
	"dependencies": {
		"axios": "^0.19.0",
		"commander": "^3.0.2",
		"flat": "^4.1.0",
		"fs-extra": "^8.1.0",
		"fs-writefile-promise": "^3.0.2",
		"globby": "^10.0.1",
		"is-url": "^1.2.4",
		"jest-expect-message": "^1.0.2",
		"jest-extended": "^0.11.2",
		"jsonld": "^1.8.0",
		"lodash.groupby": "^4.6.0",
		"mkdirp-promise": "^5.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-conventional": "^8.2.0",
		"@types/eslint": "^6.1.2",
		"@types/jest": "24.0.0",
		"@types/node": "^12.7.11",
		"@typescript-eslint/eslint-plugin": "^2.3.2",
		"@typescript-eslint/parser": "^2.3.2",
		"eslint": "^6.5.1",
		"espree": "^6.1.1",
		"husky": "^3.0.8",
		"jest": "24.0.0",
		"lint-staged": "^9.4.1",
		"nodemon": "^1.19.4",
		"prettier": "^1.18.2",
		"standard-version": "^7.0.0",
		"ts-jest": "^24.1.0",
		"ts-node": "^8.4.1",
		"typescript": "^3.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/__test-utils/*"
		],
		"coverageThreshold": {
			"global": {
				"statements": 95,
				"branches": 90,
				"functions": 95,
				"lines": 95
			}
		}
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"plugin:@typescript-eslint/recommended"
		],
		"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"rules": {
			"@typescript-eslint/no-empty-function": "off",
			"@typescript-eslint/ban-ts-ignore": "off"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.{json,css,md,html}": [
			"prettier --write",
			"git add"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"prettier": {
		"endOfLine": "lf",
		"semi": false,
		"printWidth": 120,
		"tabWidth": 2,
		"useTabs": true,
		"trailingComma": "es5",
		"singleQuote": true,
		"bracketSpacing": true,
		"arrowParens": "avoid"
	}
}
