{
	"name": "act-rules-implementation-mapper",
	"version": "1.0.0",
	"description": "Mapper for condensing ACT Rules Implementations to be a consumable data for ACT Rules Website",
	"main": "./src/index.js",
	"bin": {
		"act-map-generator": "./bin/index.js"
	},
	"scripts": {
		"eslint": "eslint --color --format stylish '{src,bin}/**/*.js'",
		"test": "jest --coverage",
		"format": "prettier --write *.{json,md,js} 'src/**/*.{json,md,js}'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/act-rules/act-rules-implementation-mapper.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/act-rules/act-rules-implementation-mapper/issues"
	},
	"homepage": "https://github.com/act-rules/act-rules-implementation-mapper#readme",
	"dependencies": {
		"axios": "^0.19.0",
		"commander": "^3.0.2",
		"flat": "^4.1.0",
		"fs-extra": "^8.1.0",
		"fs-writefile-promise": "^3.0.2",
		"globby": "^10.0.1",
		"is-url": "^1.2.4",
		"jest-expect-message": "^1.0.2",
		"jest-extended": "^0.11.2",
		"jsonld": "^1.8.0",
		"lodash.groupby": "^4.6.0",
		"mkdirp-promise": "^5.0.1"
	},
	"devDependencies": {
		"eslint": "^6.5.1",
		"husky": "^3.0.7",
		"jest": "^24.9.0",
		"lint-staged": "^9.4.2",
		"prettier": "^1.18.2"
	},
	"jest": {
		"verbose": true,
		"bail": true,
		"setupFilesAfterEnv": [
			"jest-extended",
			"jest-expect-message"
		]
	},
	"lint-staged": {
		"*.{md,json,js,html}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"prettier": {
		"endOfLine": "lf",
		"semi": false,
		"printWidth": 120,
		"tabWidth": 2,
		"useTabs": true,
		"trailingComma": "es5",
		"singleQuote": true,
		"bracketSpacing": true,
		"arrowParens": "avoid"
	}
}
